<div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>@ODPI.Resources.Views.Help.AddCertificateResource.HowToAddACertificate</h3>
</div>
<div class="modal-body">
    <ol>
        <li>
            @Html.Raw(ODPI.Resources.Views.Help.AddCertificateResource.GoToManagementSite)
        </li>
        <li>
            @Html.Raw(ODPI.Resources.Views.Help.AddCertificateResource.ClickOnManagementCertificates)
            <br />
            <img src="/Content/img/help/@ODPI.Resources.Views.Help.Screenshots.Image8" />
        </li>
        <li>
            @Html.Raw(ODPI.Resources.Views.Help.AddCertificateResource.ClickOnAddCertificate)
            <br />
            <img src="/Content/img/help/@ODPI.Resources.Views.Help.Screenshots.Image9" class="greyBorder" />
        </li>
        <li>
            @Html.Raw(ODPI.Resources.Views.Help.AddCertificateResource.ClickTheBrowserButtonAndSelect)
            <br />
            <img src="/Content/img/help/@ODPI.Resources.Views.Help.Screenshots.Image10" class="greyBorder" />
        </li>
        <li>
            @Html.Raw(ODPI.Resources.Views.Help.AddCertificateResource.ClickOk)
        </li>
    </ol>
</div>
